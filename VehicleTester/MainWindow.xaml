<Window x:Class="VehicleTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VehicleTester"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid Background="#FF363131">
        <Border BorderBrush="Black" BorderThickness="15" HorizontalAlignment="Left" Height="370" VerticalAlignment="Top" Width="592"/>
        <Label x:Name="Introduction" Content="Vehicle Tester" HorizontalAlignment="Left" Margin="192,96,0,0" VerticalAlignment="Top" Width="194" Foreground="White" FontFamily="Segoe WP Black" FontSize="26.667"/>
        <Button x:Name="AddVehicle" Content="Add Vehicle" HorizontalAlignment="Left" Margin="113,220,0,0" VerticalAlignment="Top" Width="120" Background="Black" Foreground="White" Click="AddVehicle_Click"/>
        <Button x:Name="GetDirections" Content="Get Directions" HorizontalAlignment="Left" Margin="363,220,0,0" Background="Black" Foreground="White" VerticalAlignment="Top" Width="120" Click="GetDirections_Click"/>
        <Button x:Name="TestVehicle" Content="Test Vehicle" HorizontalAlignment="Left" Margin="238,220,0,0" Background="Black" Foreground="White" VerticalAlignment="Top" Width="120" Click="TestVehicle_Click"/>

    </Grid>
</Window>
